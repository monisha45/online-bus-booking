<h1> Creating Roles </h1>

<div class="right_content">
<%= link_to "Roles", roles_path, :class =>'button_example' %>
</div>

<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<%= form_for @role do |f| %>
<table>
	<tr>
		<td> Name </td>
		<td><%= f.text_field :name %></td>
	</tr>

	<tr>
		<td> Description </td>
		<td><%= f.text_area :descriptions %></td>
	</tr>
</table>
<%= f.submit %>
<% end %>


<style>
    .error{
    	color:#FF0000;
    }
    h1
    {
    	position: relative;
    	top: 25%;
    	left: 35%;
    	right: 45%;
    	color: #FF00BF;
    }
    .right_content{
        float:right;
    }
    .right_content a{
        text-decoration: none;
    }
    .right_content a:hover{
        text-decoration: underline;
    }
</style>
