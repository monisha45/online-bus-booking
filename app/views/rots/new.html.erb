<h1> Creating Routes </h1>

<div class="right_content">
<%= link_to "Buses", buses_path,:class =>'button_example' %>
</div>

<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<%= form_for @rot do |f| %>
<table>
    
	<tr>
		<td><%= f.label :From %><br /></td>
		<td><%= collection_select(:rot, :from, Route.all, :source, :source)  %> </td>
	</tr>
	<tr>
		<td><%= f.label :To %><br /></td>
		<td><%= collection_select(:rot, :to, Route.all, :destination, :destination)  %> </td>
	</tr>
	<tr>
		<td><p><%= f.label :Date_of_journey %></p> </td>
    <td><p><%= f.text_field :depart_on, :id => "datepicker"%>
</p></td>
</table>
<%= f.submit "Search" %>
<% end %>



 <script>
$(function() {
$( "#datepicker" ).datepicker({ minDate: "+0D"});
$( "#datepicker" ).datepicker( "option", "dateFormat", 'yy-mm-dd' );
});
</script>




